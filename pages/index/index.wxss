/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  padding: 10px;
  background: #F3F4F6;
}

.label-box {
  display: flex;
  align-items: center;
  height: 38px;
  color: silver;
  font-size: 12px;
  padding-left: 10px;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}

.shop-list-box {
  padding: 0px 10px;
}

.shop-list-item {
  display: flex;
  flex-flow: row;
  height: 45px;
  margin-top: 10px;
  border-bottom: 1px solid #dedede;
}

.shop-list-item-main {
  display: flex;
  flex-flow: column;
  width: 90%;
}

.shop-list-item-name {
  font-size: 13px;
  font-weight: 700;
  padding: 1px;
}
.shop-list-item-addr {
  font-size: 12px;
  color: #aaa;
}

.shop-list-item-icon {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 40px;
}

.no-more {
  font-size: 12px;
  color: silver;
}